# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=sqlite:///store_opening.db

# Twilio Configuration
# Get these from: https://console.twilio.com
# For WhatsApp Sandbox: https://console.twilio.com/us1/develop/sms/try-it-out/whatsapp-learn
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_PHONE_NUMBER=+14155238886

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@gmail.com

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (optional, alternative to OpenAI)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Scheduler Configuration
SCHEDULER_TIMEZONE=UTC
ENABLE_SCHEDULER=true

# Application Settings
DEBUG=true
PORT=5000

# Test Mode (for testing without Twilio/Email)
TEST_MODE=true
